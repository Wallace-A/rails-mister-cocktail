<div class="container-form">
  <h1 class="form-title">Mixin' something new</h1>
  <% if @cocktail.errors.any? %>
      <% @cocktail.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    <% end %>
  <%= simple_form_for @cocktail do |t| %>
    <div class="form-group">
      <%= t.label :name %>
      <%= t.text_field :name %>
    </div>
    <div class="form-group">
      <%= t.input :photo, as: :file %>
    </div>
    
    <%= t.submit class: 'btn btn-flat' %>
  <% end %>
  <%= link_to 'Back', cocktails_path, class: 'btn btn-flat' %>
</div>