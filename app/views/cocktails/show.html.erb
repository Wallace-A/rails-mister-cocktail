<div class="container-show">
  <div class="cocktail-info">
    <h1 class="cocktail-name"><%= @cocktail.name %></h1>
    <% @cocktail.doses.each do |dose| %>
    <div class="container-ingredient">
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= dose.ingredient.name %></h2>
          <p><%= dose.description %></p>
        </div>
        <div class="container-delete">
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
      
    </div>
  <% end %>
    <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-flat' %>
    <%= link_to 'Go back', cocktails_path, class: 'btn btn-flat' %>
  </div>
</div>