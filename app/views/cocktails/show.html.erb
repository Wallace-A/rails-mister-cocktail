<h1>Lookit dis cocktail</h1>
<div class="cocktail-info">
  <h1 class="cocktail-name"><%= @cocktail.name %></h1>
  <h1>Ingredients??</h1>
  <% @cocktail.doses.each do |dose| %>
  <div class="container-ingredient">
    <h1 class="ingredient-name"><%= dose.description %></h1>
    <h1 class="ingredient-name"><%= dose.ingredient.name %></h1>
    <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
  <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-flat' %>
  <%= link_to 'Go back', cocktails_path, class: 'btn btn-flat' %>
</div>